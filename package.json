{
  "name": "blog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "npm link builders && npm run build:builders",
    "copy:docs": "npx shx cp -r ./dist/blog/browser ./docs && npx shx touch ./docs/.nojekyll",
    "prerender": "ng run blog:prerender",
    "prerender:pages": "ng run blog:prerender --routes-file pages.txt --configuration static",
    "dev:ssr": "ng run blog:serve-ssr",
    "serve:ssr": "node dist/blog/server/main.js",
    "build:ssr": "ng build && ng run blog:server",
    "serve:assets": "ng run blog:static-server --path ./src --port 4201",
    "serve:blog": "ng run blog:static-server --path ./docs --port 4202",
    "build:builders": "cd builders && npx tsc",
    "build:blog-posts-json": "ng run blog:generate-blog-posts-json",
    "build:urls": "ng run blog:generate-prerender-urls",
    "build:rss": "ng run blog:generate-rss",
    "build:blog": "npm run build:urls && npm run prerender:pages && npm run build:rss -- --rss-path ./dist/blog/browser/blog/atom.xml && npm run copy:docs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/cdk": "^12.2.10",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/material": "^12.2.10",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/platform-server": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@nguniversal/express-engine": "^12.1.1",
    "js-yaml": "^4.1.0",
    "markdown-it": "^12.2.0",
    "ramda": "^0.27.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.4",
    "@angular/cli": "~12.2.4",
    "@angular/compiler-cli": "~12.2.0",
    "@nguniversal/builders": "^12.1.1",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.8.0",
    "@types/js-yaml": "^4.0.3",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^12.11.1",
    "@types/puppeteer": "^5.4.4",
    "@types/ramda": "^0.27.45",
    "express": "^4.17.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1",
    "typescript": "~4.3.5"
  }
}
