{
  "name": "blog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postinstall": "npm run build:builders && npm run build:schematics && npm i ./builders && npm i ./schematics",
    "generate-post": "ng g @wellwind/blog-schematics:generate-post",
    "prerender": "ng run blog:prerender",
    "prerender:pages": "ng run blog:prerender:static --routes-file pages.txt",
    "dev:ssr": "ng run blog:serve-ssr",
    "serve:ssr": "node dist/blog/server/main.js",
    "build:ssr": "ng build && ng run blog:server",
    "serve:assets": "ng run blog:static-server --path ./src --port 4201",
    "serve:blog": "ng run blog:static-server --path ./dist/blog/browser --port 4202",
    "build:builders": "cd builders && npm run build",
    "build:schematics": "cd schematics && npm run build",
    "build:blog-posts-json": "ng run blog:generate-blog-posts-json",
    "build:urls": "ng run blog:generate-prerender-urls",
    "build:rss": "ng run blog:generate-rss",
    "build:minify-html": "ng run blog:minify-rendered-files",
    "build:deploy": "npm run build:blog-posts-json && npm run build:urls && npm run build && npm run build:minify-html && npm run build:rss -- --rss-path ./dist/blog/browser/browser/atom.xml"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.2",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.2",
    "@angular/compiler": "^17.0.2",
    "@angular/core": "^17.0.2",
    "@angular/forms": "^17.0.2",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.2",
    "@angular/platform-server": "^17.0.2",
    "@angular/router": "^17.0.2",
    "@angular/ssr": "^17.0.0",
    "@rx-angular/cdk": "^16.0.0",
    "@rx-angular/template": "^16.0.1",
    "@wellwind/blog-builder": "file:builders",
    "@wellwind/blog-schematics": "file:schematics",
    "feed": "^4.2.2",
    "highlight.js": "^11.9.0",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.6",
    "marked-highlight": "^2.0.6",
    "ramda": "^0.27.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.2",
    "@types/express": "^4.17.13",
    "@types/html-minifier": "^4.0.2",
    "@types/jasmine": "~3.8.0",
    "@types/js-yaml": "^4.0.3",
    "@types/node": "^20.9.0",
    "@types/puppeteer": "^5.4.4",
    "@types/ramda": "^0.27.45",
    "autoprefixer": "^10.4.12",
    "concurrently": "^6.3.0",
    "express": "^4.17.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "postcss": "^8.4.17",
    "shx": "^0.3.3",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.2.1",
    "typescript": "~5.2.2"
  }
}
