{
  "$schema": "http://json-schema.org/schema",
  "$id": "GenerateBlogPost",
  "title": "Generate Blog Post",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the post.",
      "type": "string"
    },
    "project": {
      "description": "Project name contains posts",
      "type": "string",
      "default": "blog"
    },
    "draft": {
      "type": "boolean",
      "description": "Is draft.",
      "default": true
    }
  },
  "required": [
    "name"
  ]
}
