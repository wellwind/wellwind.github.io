{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "downlevelIteration": true,
    "target": "ESNEXT",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.collection"
    ],
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@features": [
        "src/features/index.ts"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@shared/core": [
        "src/shared/core/index.ts"
      ],
      "@shared/core/*": [
        "src/shared/core/*"
      ],
      "@shared/infrastructure": [
        "src/shared/infrastructure/index.ts"
      ],
      "@shared/infrastructure/*": [
        "src/shared/infrastructure/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
